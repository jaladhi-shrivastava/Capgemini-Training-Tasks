package com.labs;

import java.util.Comparator;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

public class EmployeeService {

    private List<Employee> employees = EmployeeRepository.getEmployees();

   
    public double calculateAverageSalary() {
        return employees.stream()
                .collect(Collectors.averagingDouble(Employee::getSalary));
    }

    
    public Map<Department, Employee> maxSalaryByDepartment() {
        return employees.stream()
                .filter(e -> e.getDepartment() != null)
                .collect(Collectors.groupingBy(
                        Employee::getDepartment,
                        Collectors.collectingAndThen(
                                Collectors.maxBy(Comparator.comparing(Employee::getSalary)),
                                e -> e.orElse(null)
                        )));
    }

   
    public Map<Department, Double> totalSalaryByDepartment() {
        return employees.stream()
                .filter(e -> e.getDepartment() != null)
                .collect(Collectors.groupingBy(
                        Employee::getDepartment,
                        Collectors.summingDouble(Employee::getSalary)
                ));
    }


    public void displayNameAndSalary() {
        employees.stream()
                .forEach(e ->
                        System.out.println(
                                e.getFirstName() + " " +
                                e.getLastName() +
                                " -> " + e.getSalary()
                        ));
    }

 
    public List<Employee> sortBySalaryDesc() {
        return employees.stream()
                .sorted(Comparator.comparing(Employee::getSalary).reversed())
                .collect(Collectors.toList());
    }
}
